{
  "apps" : [{
    "name"        : "koa-app-name",
    "script"      : "./index.js",
    "watch"       : false,
    "exec_interpreter" : "node",
    "exec_mode"        : "fork",
    "instances" :     1,
    "error_file"        : "logs/err.log",
    "out_file"        : "logs/out.log",
    "merge_logs"      : true,
    "log_date_format" : "YYYY-MM-DD HH:mm Z",
    "env": {
      "PORT": "9321",
      "DEBUG": "Ctrl*,Lib*,Err,Global",
      "NODE_ENV": "production"
    }
  }]
}

